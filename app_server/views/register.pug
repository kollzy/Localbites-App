extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.text-center.mb-4 Register
        form(action="/auth/register", method="POST", id="registerForm")
          .form-group
            label(for="username") Username
            input#username.form-control(type="text", name="username", required)
          .form-group
            label(for="email") Email
            input#email.form-control(type="email", name="email", required)
          .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", required)

          button.btn.btn-primary.btn-block(type="submit") Register

    p.text-center
      | Already have an account? 
      a(href="/auth/login") Login here
